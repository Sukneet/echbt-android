<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="340dp"
    android:background="#CC000000"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/title_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/stats_header"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_cadence_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/cadence"
                app:srcCompat="@mipmap/ic_cadence_red"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_avg_cadence_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avg"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/avg_cadence_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/cadence_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_max_cadence_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/max"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/max_cadence_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_resistance_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/resistance"
                app:srcCompat="@mipmap/ic_resistance2"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_avg_resistance_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avg"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/avg_resistance_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/resistance_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_max_resistance_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/max"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/max_resistance_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_power_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/power"
                app:srcCompat="@mipmap/ic_power2"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_avg_power_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avg"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/avg_power_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/power_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:contentDescription="@string/power"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_max_power_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/max"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/max_power_float"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_time_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/time"
                app:srcCompat="@mipmap/ic_time_white"
                />

            <TextView
                android:id="@+id/time_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:contentDescription="@string/power"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_kcal_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/kcal"
                app:srcCompat="@mipmap/ic_kcal"
                />

            <TextView
                android:id="@+id/kcal_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:contentDescription="@string/kcal"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_dist_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:contentDescription="@string/dist"
                app:srcCompat="@mipmap/ic_dist"
                />

            <TextView
                android:id="@+id/dist_float"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:contentDescription="@string/dist"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_back_float"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:contentDescription="@string/kcal"
                app:srcCompat="@mipmap/ic_back"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_reset_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:contentDescription="@string/kcal"
                app:srcCompat="@mipmap/ic_reset_time"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_reset_stats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:contentDescription="@string/kcal"
                app:srcCompat="@mipmap/ic_reset_stats"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
